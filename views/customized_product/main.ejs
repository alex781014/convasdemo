                    ctx.rect(0, 0, 660, 500);
                    ctx.fillStyle = patBg;
                    ctx.fill();
                }
                const rageX = [130, 100, 350, 300, 150]
                const rageY = [130, 100, 100, 300, 300]
                const foodWeight = [250, 100, 100, 100, 100]
